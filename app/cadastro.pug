extends templates/tpl.pug
block var
	- var title = "Home";
	- var bodyClass = "register";
block content
	.wrapper_full
		a(href="#" class="logo")
		.info_area
			img(src="images/saude_dia.png")
			.text_area
				p Faça seu cadastro em instantes e <br> tenha acesso ao Calendário Digital<br> Saúde em Dia GSK
		.register_area
			form(novalidate).form_area
				.wrap
					h3.title cadastre-se
					p.hint
						span * 
						| Preenchimento obrigatório
					.form_group.two
						.form_item
							label
								span NOME completo
									span *
								input(type="text" class="input_text" required)
						.form_item
							label
								span Email
									span *
								input(type="email" class="input_text" required)
					.form_group.two
						.form_item
							label
								span Nome da Clinica
									span *
								input(type="text" class="input_text" required)
						.form_item
							label
								span ENDEREÇO DA CLÍNICA 
									span *
								input(type="text" class="input_text" required)
					.form_group.two_select
						.form_item
							.select_style
								label
									span uf
									select(name="")
										option(hidden selected)
										option(value="1") RJ
										option(value="2") SP
										option(value="3") MG
							.select_style
								label
									span CIDADE
										span *
									select(name="" required)
										option(hidden selected)
										option(value="1") Rio de Janeiro
										option(value="2") São Paulo
										option(value="3") Minas Gerais

								
						.form_item.check
							span É PROFISSIONAL DE SAÚDE?
							.wrap_check
								label
									input(type="checkbox" class="input_check")
									span Sim
								label
									input(type="checkbox" class="input_check")
									span Não
					.form_group.two
						.select_style
							label
								span PROFISSIONÃO
								select(name="")
									option(hidden selected)
									option(value="1") Médico
									option(value="1") Médico
									option(value="1") Médico
									option(value="1") Médico
						.form_item
							label
								span CRM, CRF ou COREM 
								input(type="text" class="input_text")
					.form_group.two
						.form_item
							label
								span SENHA
									span *
								input(type="text" class="input_text" required)
						.form_item
							label
								span CONFIRMAR SENHA
									span *
								input(type="email" class="input_text" required)
					.form_help
						.form_action
							button(class="button_primary" type="submit") ME CADASTRAR!

			footer#footer
				.footer_links
					a(href="#") Termos de uso
					a(href="#") Declaração de privacidade
					a(href="#") Política de cookies 
